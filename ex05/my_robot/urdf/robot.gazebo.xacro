    <gravity>true</gravity>
  </gazebo>
  <gazebo reference="spike_6">
    <material>Gazebo/DarkBrown</material>
    <selfCollide>false</selfCollide>
    <gravity>true</gravity>
  </gazebo>
  <gazebo reference="spike_7">
    <material>Gazebo/DarkBrown</material>
    <selfCollide>false</selfCollide>
    <gravity>true</gravity>
  </gazebo>

</robot>